<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#86F1C7"
        android:orientation="horizontal">


        <TextView
            android:layout_width="172dp"
            android:layout_height="53dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alfaslabone_regular"
            android:text="PHYSIOMATICA"
            android:textColor="#3949AB"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:src="@drawable/noti"
            android:text="Clinic Name" />




    </LinearLayout>

    <TextView
        android:layout_width="343dp"
        android:layout_height="76dp"
        android:layout_below="@id/h1"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="CLINIC DETAILS"
        android:textColor="#3949AB"
        android:textSize="20dp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/l9"
        android:layout_width="397dp"
        android:layout_height="74dp"
        android:layout_marginTop="160dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="153dp"
            android:layout_height="31dp"
            android:layout_marginStart="31dp"
            android:gravity="center"
            android:text="Clinic Name"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:hint="City Name"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l10"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_below="@+id/l9"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="132dp"
            android:layout_height="33dp"
            android:layout_marginStart="28dp"
            android:gravity="center"
            android:text="Address"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="68dp"
            android:layout_marginLeft="64dp"
            android:hint="Address"
            android:textSize="15sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/l11"
        android:layout_width="397dp"
        android:layout_height="74dp"
        android:layout_below="@+id/l10"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="148dp"
            android:layout_height="32dp"
            android:layout_marginStart="28dp"
            android:gravity="center"
            android:text="Town/City"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:hint="Town/City"
            android:textSize="15sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/l12"
        android:layout_width="397dp"
        android:layout_height="74dp"
        android:layout_below="@+id/l11"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="114dp"
            android:layout_height="31dp"
            android:layout_marginStart="28dp"
            android:gravity="center"
            android:text="State"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:hint="State"
            android:textSize="15sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/l13"
        android:layout_width="397dp"
        android:layout_height="74dp"
        android:layout_below="@+id/l12"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="142dp"
            android:layout_height="34dp"
            android:layout_marginStart="28dp"
            android:gravity="center"
            android:text="Pin Code"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:hint="Pin Code"
            android:textSize="15sp" />

    </LinearLayout>


    <Button
        android:id="@+id/t13"
        android:layout_width="145dp"
        android:layout_height="57dp"
        android:layout_below="@+id/l12"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/button_rounded2"
        android:gravity="center"
        android:text="SAVE"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/t14"
        android:layout_width="145dp"
        android:layout_height="57dp"
        android:textSize="17sp"
        android:layout_below="@+id/l12"
        android:layout_marginLeft="214dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/button_rounded2"
        android:gravity="center"
        android:text="CANCEL"
        android:textColor="@android:color/white"
        android:textStyle="bold" />












</RelativeLayout>