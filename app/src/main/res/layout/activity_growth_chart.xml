<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GrowthChart">


    <LinearLayout
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#86F1C7"
        android:orientation="horizontal">


        <TextView
            android:layout_width="172dp"
            android:layout_height="53dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alfaslabone_regular"
            android:text="PHYSIOMATICA"
            android:textColor="#3949AB"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:src="@drawable/noti"
            android:text="Clinic Name" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/c1"
        android:layout_width="366dp"
        android:layout_height="40sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="@android:color/white"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:id="@+id/l9"
            android:layout_width="374dp"
            android:layout_height="27dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/white"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/selectedTvp"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginStart="28dp"
                android:gravity="center_horizontal"
                android:text="Calendar"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/showMenuBtnp"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="178dp"
                android:backgroundTint="@android:color/white"
                android:src="@drawable/ic_arrow_drop" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout25"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="215dp"
        android:background="@drawable/ic_launcher_background"
        app:tabIndicatorColor="@android:color/holo_red_light"
        app:tabIndicatorHeight="4dp"
        app:tabSelectedTextColor="@android:color/black"
        app:tabTextColor="@android:color/white" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager25"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="270dp" />



</RelativeLayout>