<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patientlist">


    <LinearLayout
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#86F1C7"
        android:orientation="horizontal">


        <TextView
            android:layout_width="172dp"
            android:layout_height="53dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alfaslabone_regular"
            android:text="PHYSIOMATICA"
            android:textColor="#3949AB"
            android:textSize="17dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SearchView
            android:layout_width="166dp"
            app:queryHint="search..."
            app:iconifiedByDefault="false"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/at3"
        android:layout_width="300dp"
        android:layout_height="26dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="78dp"
        android:gravity="start"
        android:textStyle="bold"
        android:text="Patients List"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/at5"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_below="@id/h1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <ImageButton
        android:layout_below="@+id/at3"
        android:id="@+id/ib5"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="15dp"
        android:layout_width="30dp"
        android:src="@drawable/date"
        android:background="@android:color/white"
        android:scaleType="centerCrop"
        android:layout_height="30dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout27"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/ic_launcher_background"
        app:tabIndicatorColor="@android:color/holo_red_light"
        app:tabIndicatorHeight="4dp"
        android:layout_marginTop="175dp"
        app:tabSelectedTextColor="@android:color/black"
        app:tabTextColor="@android:color/white" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager27"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_marginTop="240dp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/c2"
        android:layout_width="250dp"
        android:layout_height="45sp"
        android:layout_below="@+id/c1"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="80dp"
        app:cardBackgroundColor="#57E66F"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:id="@+id/l95"
            android:layout_width="374dp"
            android:layout_height="27dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#57E66F"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/selectedTv"
                android:layout_width="256dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Body Charts"
                android:textColor="#3949AB"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/c3"
        android:layout_width="250dp"
        android:layout_height="45sp"
        android:onClick="hh"
        android:layout_below="@+id/c2"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="6dp"
        app:cardBackgroundColor="#FDD835"
        app:cardCornerRadius="30dp">

        <LinearLayout

            android:layout_width="374dp"
            android:layout_height="27dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FDD835"
            android:orientation="horizontal">


            <TextView

                android:layout_width="256dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Digital  Prescription"
                android:textColor="#3949AB"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/c4"
        android:layout_width="250dp"
        android:layout_height="45sp"
        android:layout_below="@+id/c3"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="6dp"
        app:cardBackgroundColor="#2AE6E6"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:id="@+id/l9"
            android:layout_width="374dp"
            android:layout_height="27dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#2AE6E6"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/selectedTvp"
                android:layout_width="256dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="EHR Case Report"
                android:textColor="#3949AB"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/c1"
        android:layout_width="250dp"
        android:layout_height="45sp"
        android:background="@drawable/edit_text_bg"
        android:layout_below="@+id/viewpager27"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#F6AE5C"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="203dp"
            android:layout_height="27dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#F6AE5C"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Exercises"
                android:textColor="#3949AB"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="87dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="145dp"
            android:layout_height="85dp"
            android:layout_marginLeft="55dp"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/s2"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/bt_jj"
                    android:layout_width="64dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginBottom="30dp"
                    android:background="#86F1C7"
                    android:onClick="addapp"
                    android:src="@drawable/ic_add_black"
                    app:fabCustomSize="34dp">

                </com.google.android.material.floatingactionbutton.FloatingActionButton>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="145dp"
            android:layout_height="85dp"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/s1"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/bt_float2"
                    android:layout_width="64dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginBottom="30dp"
                    android:background="#86F1C7"
                    android:onClick="addapp"
                    android:src="@drawable/ic_add_black"
                    app:fabCustomSize="34dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</RelativeLayout>