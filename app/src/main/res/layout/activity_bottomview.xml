<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomview">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/h1"
        android:orientation="horizontal"
        android:background="#86F1C7"
        android:layout_height="70dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:text="Today's Status" />

        <TextView
            android:layout_width="172dp"
            android:layout_height="53dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alfaslabone_regular"
            android:text="PHYSIOMATICA"
            android:textColor="#3949AB"
            android:textSize="17dp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/h1"
        android:layout_width="200dp"
        android:orientation="vertical"
        android:layout_height="70dp">

        <TextView
            android:text="Clinic Name"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black"
            android:layout_width="120dp"
            android:layout_height="30dp"/>

        <TextView
            android:text="Clinic Address"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="30dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="160dp"
        android:layout_marginTop="80dp"
        android:layout_width="300dp"
        android:layout_height="70dp">

        <ImageView
            android:text="Clinic Name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="140dp"
            android:src="@drawable/wallet"
            android:layout_width="120dp"
            android:layout_height="30dp"/>





    </LinearLayout>

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="107dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/s1"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/bt_jj"
                    android:layout_width="64dp"
                    android:onClick="addapp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="30dp"
                    app:fabCustomSize="34dp"
                    android:background="#86F1C7"
                    android:src="@drawable/ic_add_black"
                    android:layout_marginBottom="30dp"
                    >

                </com.google.android.material.floatingactionbutton.FloatingActionButton>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/s2"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/bt_float2"
                    android:layout_width="64dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="#86F1C7"
                    android:onClick="addapp"
                    android:src="@drawable/ic_add_black"
                    app:fabCustomSize="34dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="86dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/s3"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="64dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="#86F1C7"
                    android:onClick="addapp"
                    android:src="@drawable/ic_add_black"
                    app:fabCustomSize="34dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_marginLeft="5dp"
            android:layout_height="100dp"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="79dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/s4"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="64dp"
                    android:onClick="addapp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="30dp"
                    app:fabCustomSize="34dp"
                    android:background="#86F1C7"
                    android:src="@drawable/ic_add_black"
                    android:layout_marginBottom="30dp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>