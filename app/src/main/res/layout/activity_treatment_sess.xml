<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TreatmentSess">



    <LinearLayout
        android:id="@+id/f8"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#86F1C7"
        android:orientation="horizontal">


        <TextView
            android:layout_width="172dp"
            android:layout_height="53dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alfaslabone_regular"
            android:text="PHYSIOMATICA"
            android:textColor="#3949AB"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:src="@drawable/noti"
            android:text="Clinic Name" />




    </LinearLayout>


        <TextView
            android:layout_below="@+id/f8"
            android:id="@+id/ty"
            android:layout_width="384dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:text="Calendar"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:layout_below="@+id/ty"
            android:id="@+id/mDisplayDate"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold" />





    <ImageButton
        android:id="@+id/display"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:layout_marginTop="158dp"
        android:layout_marginLeft="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/date" />





    <LinearLayout
        android:id="@+id/f9"
        android:layout_below="@+id/mDisplayDate"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="No. of Sessions"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="114dp"
            android:text="PRICE"
            android:textSize="18sp"
            android:textStyle="bold" />





    </LinearLayout>

    <LinearLayout
        android:id="@+id/f10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f9"
        android:orientation="horizontal">


        <EditText
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="94dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textStyle="bold" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView14"
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:layout_below="@+id/f10"
        android:layout_marginBottom="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


    <LinearLayout
        android:id="@+id/mm"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_below="@+id/recyclerView14"
        android:layout_marginTop="37dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="92dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="Add"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="91dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="9dp"
                    android:gravity="center"
                    android:text="Modify"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="91dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="77dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Save"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="84dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>











</RelativeLayout>