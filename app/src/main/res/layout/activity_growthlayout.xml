<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".growthlayout">

    <LinearLayout
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#86F1C7"
        android:orientation="horizontal">


        <TextView
            android:layout_width="172dp"
            android:layout_height="53dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alfaslabone_regular"
            android:text="PHYSIOMATICA"
            android:textColor="#3949AB"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:src="@drawable/noti"
            android:text="Clinic Name" />


    </LinearLayout>


    <TextView
        android:id="@+id/at3"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="109dp"
        android:gravity="start"
        android:textColor="@android:color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="My Clinic Growth Report"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:padding="10dp"
        app:cardBackgroundColor="#86F1C7"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="184dp"
                android:layout_height="72dp"
                android:layout_marginTop="45dp"
                android:text="@string/p1"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textAlignment="center"
                android:textStyle="bold" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:onClick="ll"
        android:id="@+id/launch"
        android:text="Make  Request"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/button_rounded4"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="635dp"
        android:layout_marginStart="240dp"
        android:layout_width="130dp"
        android:layout_height="60dp"/>

</RelativeLayout>