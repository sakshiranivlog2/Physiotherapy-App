<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthReport">


    <LinearLayout
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#86F1C7"
        android:orientation="horizontal">


        <TextView
            android:layout_width="172dp"
            android:layout_height="53dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alfaslabone_regular"
            android:text="PHYSIOMATICA"
            android:textColor="#3949AB"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:src="@drawable/noti"
            android:text="Clinic Name" />


    </LinearLayout>


    <TextView
        android:id="@+id/at3"
        android:layout_width="302dp"
        android:layout_height="43dp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="109dp"
        android:gravity="start"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="My Clinic Health Report"
         />

    <TextView
        android:id="@+id/at4"
        android:layout_below="@+id/at3"
        android:layout_width="350dp"
        android:layout_height="26dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:textStyle="bold"
        android:text="Name and Address of Clinic/Hospital"
        android:textSize="18dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout20"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/ic_launcher_background"
        app:tabIndicatorColor="@android:color/holo_red_light"
        app:tabIndicatorHeight="4dp"
        app:tabSelectedTextColor="@android:color/black"
        app:tabTextColor="@android:color/white" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager20"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="270dp" />

    <Button
        android:onClick="bhh"
        android:id="@+id/bh"
        android:text="@string/s9"
        android:textColor="@android:color/white"
        android:background="@drawable/button_rounded4"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="650dp"
        android:layout_marginStart="240dp"
        android:layout_width="130dp"
        android:layout_height="60dp"/>

</RelativeLayout>